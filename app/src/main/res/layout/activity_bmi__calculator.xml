<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sagar.fitnessfanatic.Activity.Bmi_Calculator">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bmi_head"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/temp2"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/temp2"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="please fill your info"
            android:fontFamily="@font/baloo"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:id="@+id/plain_tv"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/ic_height"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Height (cm)  :"
                    android:textSize="17sp"
                    android:fontFamily="@font/average_sans"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/et_height"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/ic_weight"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Weight (kg)  :"
                    android:textSize="17sp"
                    android:fontFamily="@font/average_sans"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/black"
                    android:maxLength="5"
                    android:inputType="numberDecimal"
                    android:id="@+id/et_weight"
                    android:textColor="@color/black"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:text="Calculate bmi"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:id="@+id/calculate_bmi_btn"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:background="@drawable/button_back_primary"
            android:layout_height="35dp"/>


        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_margin="20dp"
            android:src="@drawable/bmi_anim"
            />

    </LinearLayout>

</RelativeLayout>