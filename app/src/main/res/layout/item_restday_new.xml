<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Day 4 is rest day"
            android:textColor="@color/black"
            android:fontFamily="@font/average_sans"
            android:textStyle="bold"
            android:id="@+id/tv_cd"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            app:lottie_rawRes="@raw/rest_day"
            app:lottie_autoPlay="true"
            android:layout_marginTop="5dp"
            android:id="@+id/rest_day"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            app:lottie_loop="true"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Your body and muscles need to get some rest"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/average_sans"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_explore"
                android:text="explore app"
                android:fontFamily="@font/average_sans"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_back_primary"
                android:layout_height="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_exit"
                android:text="exit app"
                android:fontFamily="@font/average_sans"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/button_back_primary"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>