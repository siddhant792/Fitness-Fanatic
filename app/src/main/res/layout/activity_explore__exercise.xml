<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sagar.fitnessfanatic.Activity.Explore_Exercise">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:id="@+id/exe_gif"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:src="@drawable/thumb_mountainclimber"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Exercise Name"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_exercise_name"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/raleway_medium"
            android:textSize="23sp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:paddingTop="10dp"
            android:background="#F1EEEE"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:text="Duration"
                android:fontFamily="@font/average_sans"
                android:textSize="18sp"
                android:id="@+id/tv_duration_reps"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="00:30"
                android:gravity="right"
                android:id="@+id/tv_duration"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/average_sans"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_description"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#5E5A5A"
            android:text="Get into a plank position, making sure to distribute your weight evenly between your hands and your toes. Check your formâ€”your hands should be about shoulder-width apart, back flat, abs engaged, and head in alignment. Pull your right knee into your chest as far as you can."
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:clickable="true"
        android:id="@+id/bottom_btnn"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_start"
            android:layout_margin="5dp"
            android:text="close"
            android:fontFamily="@font/fredoka_one"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/button_back_primary"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottom_btnn"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/ic_shiift_left"
            android:id="@+id/shift_left"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_current_exe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:text="10"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:text="/14"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/tv_total_exe"
                android:fontFamily="@font/raleway_medium"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/ic_shift_right"
            android:id="@+id/shift_right"
            android:layout_height="30dp"/>

    </LinearLayout>

</RelativeLayout>